<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context" 
	   xmlns:mvc="http://www.springframework.org/schema/mvc" 
	   xsi:schemaLocation="http://www.springframework.org/schema/beans 
						   http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
						   http://www.springframework.org/schema/mvc
						   http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
						   http://www.springframework.org/schema/context
						   http://www.springframework.org/schema/context/spring-context-4.0.xsd">
	<bean id="accountLogic" class="com.account.AccountLogic">
		<property name="accountDao" ref="accountDao"/>
	</bean>
	<bean class="com.card.CardLogic" id="cardlogic">
		<property name="cardDao" ref="cardDao"/>
	</bean>	
	<bean class="com.member.MemberLogic" id="memberLogic">
		<property name="memberDao" ref="memberDao"/>
	</bean>	
	<bean class="com.membership.membershipLogic" id="membershipLogic">
		<property name="membershipDao" ref="membershipDao"/>
	</bean>	
	<bean class="com.plan.PlanLogic" id="planLogic">
		<property name="planDao" ref="planDao"/>
	</bean>	
	<bean class="com.recommend.RecommendLogic" id="recommendLogic">
		<property name="recommendDao" ref="recommendDao"/>
	</bean>	
	<bean class="com.rewards.RewardsLogic" id="rewardsLogic">
		<property name="rewardsDao" ref="rewardsDao"/>
	</bean>	
</beans>